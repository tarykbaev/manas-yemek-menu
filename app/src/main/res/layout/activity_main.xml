<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor">

    <LinearLayout
        android:id="@+id/fragment_menu_liner_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view1"
                android:layout_width="170dp"
                android:layout_height="185dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp">

                <ImageView
                    android:id="@+id/menu_image_view1"
                    android:layout_width="170dp"
                    android:layout_height="150dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical">

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="1dp">

                        <TextView
                            android:id="@+id/food_text_view1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:layout_marginLeft="0dp"
                            android:itemTextAppearance="?android:attr/textAppearance"
                            android:textSize="13sp"
                            app:fontFamily="sans-serif-condensed-light"
                            tools:ignore="SmallSp" />
                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/food_text_view1_k"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:itemTextAppearance="?android:attr/textAppearance"
                        android:textSize="12sp"
                        app:fontFamily="sans-serif-condensed-light" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="170dp"
                android:layout_height="185dp"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/menu_image_view2"
                    android:layout_width="170dp"
                    android:layout_height="150dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical">

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="1dp">

                        <TextView
                            android:id="@+id/food_text_view2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:layout_marginLeft="0dp"
                            android:textSize="13sp"
                            app:fontFamily="sans-serif-condensed-light"
                            tools:ignore="SmallSp" />
                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/food_text_view2_k"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:itemTextAppearance="?android:attr/textAppearance"
                        android:textSize="12sp"
                        app:fontFamily="sans-serif-condensed-light" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view3"
                android:layout_width="170dp"
                android:layout_height="185dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp">

                <ImageView
                    android:id="@+id/menu_image_view3"
                    android:layout_width="170dp"
                    android:layout_height="150dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical">

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="1dp">

                        <TextView
                            android:id="@+id/food_text_view3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:layout_marginLeft="0dp"
                            android:textSize="13sp"
                            app:fontFamily="sans-serif-condensed-light"
                            tools:ignore="SmallSp" />
                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/food_text_view3_k"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="12sp"
                        app:fontFamily="sans-serif-condensed-light" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view4"
                android:layout_width="170dp"
                android:layout_height="185dp"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/menu_image_view4"
                    android:layout_width="170dp"
                    android:layout_height="150dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical">

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="1dp">

                        <TextView
                            android:id="@+id/food_text_view4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:layout_marginLeft="0dp"
                            android:textSize="13sp"
                            app:fontFamily="sans-serif-condensed-light"
                            tools:ignore="SmallSp" />
                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/food_text_view4_k"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="12sp"
                        app:fontFamily="sans-serif-condensed-light" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:id="@+id/hor_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:fontFamily="sans-serif-condensed-light">

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_above"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:fontFamily="sans-serif-condensed-light" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/refresh_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary2"
            android:text="@string/to_day"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>